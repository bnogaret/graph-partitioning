{
  "extends": "eslint:recommended",

  "env": {
    "browser": true,
    "es6": true,
    "node": true,
  },

  "rules": {
    // Possible errors
    "comma-dangle": [2, "always-multiline"],
    "no-cond-assign": 1,
    "no-console": 0,
    "no-constant-condition": 1,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": [2, {
      "requireParamDescription": false,
      "requireReturnDescription": false,
      "requireReturn": false,
    }],
    "valid-typeof": 2,

    // Best practices
    "consistent-return": 1,
    "constructor-super": 1,
    "curly": 2,
    "default-case": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": 2,
    "no-alert": 1,
    "no-class-assign": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-const-assign": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 1,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal": 2,
    "no-param-reassign": [2, {"props": false}],
    "no-proto": 2,
    "no-redeclare": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-this-before-super": 2,
    "no-throw-literal": 1,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-void": 2,
    "no-with": 2,
    "radix": [2, "always"],

    // Strict mode
    "strict": [2, "global"],

    // Variables
    "init-declarations": 2,
    "no-delete-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef-init": 1,
    "no-undef": 2,
    "no-undefined": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-use-before-define": 2,

    // Specific for node coding
    "global-require": 2,
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-process-exit": 2,

    // Stylilistic issue
    "arrow-spacing": [2, {"before": true, "after": true}],
    "brace-style": [2, "1tbs", {"allowSingleLine": true }],
    "camelcase": 2,
    "comma-spacing": [2, {"before": false, "after": true}],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "eol-last": 2,
    "indent": [2, 2, {
          "SwitchCase": 1,
    }],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "no-array-constructor": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-nested-ternary": 2,
    "no-new-func": 2,
    "object-curly-spacing": [2, "never"],
    "operator-assignment": 1,
    "operator-linebreak": [2, "before"],
    "padded-blocks": [2, "never"],
    "quotes": [2, "single", "avoid-escape"],
    "quote-props": [2, "as-needed", {"keywords": true, "unnecessary": false, "numbers": true}],
    "semi-spacing": [2, {"before": false, "after": true}],
    "semi": [2, "always"],
    "sort-vars": [2, {"ignoreCase": true}],
    "space-before-blocks": [2, {"functions": "always", "keywords": "always"}],
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": [2, "always"],
  },
}
